// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  PREMIUM
  ADMIN
  MODERATOR
  BANNED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  phone        String?
  roles        Role[]
  password     String
  refreshToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
